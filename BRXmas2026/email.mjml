<mjml>
  <mj-head>
  <mj-style>
@media only screen and (max-width:480px) {

  .text01 {
    font-size: 20px !important;    
  }

  .text01 div {
    font-size: 20px !important;    
  }

  .text02 {
    font-size: 15px !important;    
  }

  .text02 div {
    font-size: 15px !important;    
  }

  .text03 {
    font-size: 19px !important;    
  }

  .text03 div {
    font-size: 19px !important;    
  }


}

.logoOnTop img {
  min-width: 300px!important;
}


