    <mj-attributes>
      <mj-all padding="0" />
      <mj-body width="600px" />

    <mj-text font-family="Arial" line-height="1.5"/>

    </mj-attributes>
  </mj-head>

  <mj-body css-class="dark-mode">

    <!-- Row 1 -->


    <mj-section padding-top="0px" padding-bottom="0px">
    <mj-group>
      <mj-column>
        <mj-image css-class="logoOnTop" src="brx_xmas_logo_on_white_300.png" alt="BRX" width="300px" height="80px" align="left" />
      </mj-column>
      <mj-column>
        <mj-image src="brx_xmas_spacer_white_300x80.png" alt="BRX" height="80px" align="left"/>
      </mj-column>
      </mj-group>
    </mj-section>

    <!-- Row 2 -->
    <mj-section>
      <mj-column>
        <mj-image src="brx_xmas_hero.jpg" alt="Wishing you a very Merry BRXmas"  padding="0" />
      </mj-column>
    </mj-section>

    <!-- Row 3 -->
    <mj-section padding-top="25px" padding-bottom="25px" padding-left="50px" padding-right="45px">
      <mj-column>
        <mj-text font-size="30px" font-weight="bold" color="#282828" css-class="text01">
          Hi {{first_name}},
        </mj-text>
        <mj-spacer height="16px" />
        <mj-text font-size="18px" color="#282828" css-class="text02" >
          Our little gingerbread friend has a short, AI-fuelled adventure to showcase some of the work we have done together this&nbsp;year.<br><br>
